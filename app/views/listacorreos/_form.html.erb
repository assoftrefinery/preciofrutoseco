<%= form_for(@listacorreo) do |f| %>
  <% if @listacorreo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listacorreo.errors.count, "error") %> han impedido que se guarden los datos:</h2>

      <ul>
      <% @listacorreo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre, :class => 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, :class => 'form-control' %>
  </div>
  
  <div class="actions">
    <%= f.submit (f.object.new_record? ? "Crear Destinatario" : "Actualizar Destinatario"), :class=>'btn btn-primary btn-block' %>
  </div>
<% end %>